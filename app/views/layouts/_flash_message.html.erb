<% flash.each do |type, message| %>
 <% if alert.nil? %>
	<div class="alert alert-success">
	  <strong><%= message %></strong> 
	  <button class="close" data-dismiss="alert" aria-hidden="true">×</button>
	</div>
 <% elsif notice.nil? %>
	<div class="alert alert-danger">
	  <strong><%= message %></strong> 
	  <button class="close" data-dismiss="alert" aria-hidden="true">×</button>
	</div>
 <% end -%>	
<% end %>