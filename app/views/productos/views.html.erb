<div class="container">
<div class="row">
            <div class="col-lg-12">
                <h2 class="page-header grey-text bold"><%= @producto.nombre%>
                    <small><%= @producto.user.email rescue nil%></small>
                </h2>
            </div>
        </div>
        <br/>
  <div id="main_area">
          <!-- Slider -->
      <div class="row">
          <div class="col-xs-12" id="slider">
              <!-- Top part of the slider -->
              <div class="row">
                  <div class="col-md-8" id="carousel-bounding-box">
                      <div class="carousel slide" id="myCarousel">
                          <!-- Carousel items -->
                          <div class="carousel-inner">
                          <% if @producto.imagen.exists?%>
                              <div class="active item" data-slide-number="0">
                              <%= image_tag @producto.imagen.url(:medium)%></div>
                          <% end -%>
                          <% if @producto.imagen2.to_s != "" %>
                              <div class="item" data-slide-number="1">
                              <%= image_tag @producto.imagen2.url(:medium)%></div>
                          <% end -%>
                          <% if @producto.imagen3.to_s != "" %>
                              <div class="item" data-slide-number="2">
                              <%= image_tag @producto.imagen3.url(:medium)%></div>
                          <% end -%>
                          <% if @producto.imagen4.to_s != ""%>
                              <div class="item" data-slide-number="3">
                              <%= image_tag @producto.imagen4.url(:medium)%></div>
                          <% end -%>
                          </div><!-- Carousel nav -->
                          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                              <span class="glyphicon glyphicon-chevron-left"></span>                                       
                          </a>
                          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                              <span class="glyphicon glyphicon-chevron-right"></span>                                       
                          </a>                                
                          </div>
                  </div>

                  <div class="col-md-4" >


                      <h3><strong>Descripción del Producto</strong></h3>
                      <p align="justify"><%= @producto.descripcion rescue nil%></p>
                      <h3><strong>Detalles del Producto</strong></h3>
                      <ul>
                          <li><strong>Precio:</strong> <%=  "$#{@producto.precio}" rescue nil%></li>
                          <li><strong>Descuento:</strong> </li>
                          <li><%= render "in_shopping_carts/form", producto: @producto%></li>
                          <li>Adipiscing Elit</li>
                      </ul>
                  </div>
    
                  </div>
              </div>
          </div>
      </div><!--/Slider-->

      <div class="row hidden-xs" id="slider-thumbs">
              <!-- Bottom switcher of slider -->
              <ul class="hide-bullets">
              <% if @producto.imagen.to_s != "" %>
                  <li class="col-sm-2">
                      <a class="thumbnail" id="carousel-selector-0"><%= image_tag @producto.imagen.url(:medium)%></a>
                  </li>
              <% end -%>
              <% if @producto.imagen2.to_s != "" %>
                  <li class="col-sm-2">
                      <a class="thumbnail" id="carousel-selector-1"><%= image_tag @producto.imagen2.url(:medium)%></a>
                  </li>
              <% end -%>
              <% if @producto.imagen3.to_s != "" %>
                  <li class="col-sm-2">
                      <a class="thumbnail" id="carousel-selector-2"><%= image_tag @producto.imagen3.url(:medium)%></a>
                  </li>
              <% end -%>
              <% if @producto.imagen4.to_s != "" %>
                  <li class="col-sm-2">
                      <a class="thumbnail" id="carousel-selector-3"><%= image_tag @producto.imagen4.url(:medium)%></a>
                  </li>
              <% end -%>
              </ul>                 
      </div>
  </div>
</div>


<script>
  jQuery(document).ready(function($) {
 
        $('#myCarousel').carousel({
                interval: 5000
        });
 
        $('#carousel-text').html($('#slide-content-0').html());
 
        //Handles the carousel thumbnails
       $('[id^=carousel-selector-]').click( function(){
            var id = this.id.substr(this.id.lastIndexOf("-") + 1);
            var id = parseInt(id);
            $('#myCarousel').carousel(id);
        });
 
 
        // When the carousel slides, auto update the text
        $('#myCarousel').on('slid.bs.carousel', function (e) {
                 var id = $('.item.active').data('slide-number');
                $('#carousel-text').html($('#slide-content-'+id).html());
        });
});
</script>

