
 <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header grey-text bold"><%= @producto.nombre%>
                    <small>Administrador General</small>
                </h2>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">
            <div class="col-md-6" id="listpro">
                <table width="100%">
                    <tr>
                        <td width="85%"><br/><p><legend>&nbsp;&nbsp;Descripci√≥n</legend></p></td>
                        <td width="15%"></td>
                    </tr>
                <% @producto.attachments.each do |attachment|%>
                  <tr>
                    <td>
                     <ul>
                         <li><%= attachment.descripcion.upcase rescue nil%></li>
                     </ul>
                     </td>
                     <td>
                        <%= link_to  attachment, class: 'btn btn-flat btn-success btn-sm' do %>
                       <i class="fa fa-download"></i> <span></span>
                      <% end -%>
                       <%= link_to  attachment, confirm: 'Are you sure?', method: :delete, data: { confirm: 'Esta seguro de Eliminar el PRODUCTO?' }, class: 'btn btn-flat btn-danger btn-sm' do %>
                       <i class="fa fa-close"></i> <span></span>
                      <% end -%>
        
                     </td>
                  </tr>
                <% end -%>
                </table>
            </div>
            <div class="col-md-1">
            </div>
       
            <div id="admin" class="col-md-5 grey-text "><br/>
                <p ><legend>&nbsp;&nbsp;Funciones de Administrador</legend></p> 
            <div class="col-md-4 grey-text " align="center">Editar<br/>
              <%= link_to edit_producto_path(@producto) do %>
                <button class="btn btn-sm btn-info"><i class="fa fa-edit"></i></button>
               <% end %>
            </div>
            <div class="col-md-4 grey-text " align="center">Ver<br/>
              <%= link_to producto_path(id: @producto.id, cliente:true), class: 'btn btn-sm btn-success' do %>
               <i class="fa fa-file-text"></i><span></span>
              <% end %>           
            </div>
            <div class="col-md-4 grey-text " align="center">Eliminar<br/>
               <%= link_to producto_path(@producto),
               remote: true, method: :delete, data: { confirm: 'Esta seguro de Eliminar el PRODUCTO?' }, class: 'btn btn-flat btn-danger btn-sm' do %>
             <i class="fa fa-close"></i> <span></span>
            <% end %>
            </div>

            <div class="col-md-4 grey-text " align="left"><br/><br/>
            <%= render "attachments/form", producto_id: @producto.id%>
            </div>
            </div>
        
        </div>
   

    </div>
  